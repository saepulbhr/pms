<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>

<body>
    <!-- GET MENU -->
    <% include ../partial/header%>
    <div class="container-fluid">
        <div class="container-fluid">
            <h3 style="margin-top:5%; margin-left:7%">Edit User</h3>
        </div>
    </div>
    <div class="container-fluid">
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <form action="/users/update/<%= data.userid %>" method="POST">
                        <div class="form-group">
                            <label for="inputAddress2">Email</label>
                            <input type="email" class="form-control" id="email" placeholder="Email" name="email" value="<%= data.email%>">
                        </div>
                        <div class="form-group">
                            <label for="inputAddress2">Password</label>
                            <input type="password" class="form-control" id="password" placeholder="Password"
                                name="password">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="firstname">First Name</label>
                                <input type="text" class="form-control" id="firstname" name="firstname"
                                    placeholder="First Name" value="<%= data.firstname %>">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="lastname">Last Name</label>
                                <input type="text" class="form-control" id="lastname" name="lastname"
                                    placeholder="Last Name" value="<%= data.lastname %>">
                            </div>
                        </div>
                        <fieldset class="form-group">
                            <div class="row">
                                <legend class="col-form-label col-sm-2 pt-0">Position</legend>
                                <div class="col-sm-10">
                                    <div class="form-check">
                                        <div class="custom-control custom-radio">
                                            <input type="radio" id="manager" name="position" value="Manager"
                                                class="custom-control-input" <%= data.roles == "Manager" ? ' checked': ''%>>
                                            <label class="custom-control-label" for="manager">Manager</label>
                                        </div>
                                    </div>
                                    <div class="form-check">
                                        <div class="custom-control custom-radio">
                                            <input type="radio" id="programmer" name="position" value="Programmer"
                                                class="custom-control-input" <%= data.roles == "Programmer" ? ' checked': '' %>>
                                            <label class="custom-control-label" for="programmer">Programmer</label>
                                        </div>
                                    </div>
                                    <div class="form-check disabled">
                                        <div class="custom-control custom-radio">
                                            <input type="radio" id="qualityassurance" name="position" value="Quality Assurance"
                                                class="custom-control-input" <%= data.roles == "Quality Assurance" ? ' checked': '' %>>
                                            <label class="custom-control-label" for="qualityassurance">Quality
                                                Assurance</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-group">
                            <div class="row">
                                <legend class="col-form-label col-sm-2 pt-0">Type</legend>
                                <div class="form-check ml-3">
                                    <div class="custom-control custom-radio">
                                        <input type="radio" id="full" name="typejob" value="true"
                                            class="custom-control-input" <%= data.typejob == true ? ' checked': '' %>>
                                        <label class="custom-control-label" for="full">Fulltime</label>
                                    </div>
                                </div>
                                <div class="form-check">
                                    <div class="custom-control custom-radio">
                                        <input type="radio" id="part" name="typejob" value="false"
                                            class="custom-control-input" <%= data.typejob == false ? ' checked': '' %>>
                                        <label class="custom-control-label" for="part">Parttime</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

</html>