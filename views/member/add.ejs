<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>

<body>

    <% include ../partial/header %>
    <div class="d-flex" id="wrapper" style="margin-top: 3.9%">
        <!-- Sidebar Menu     -->
        <% include ../partial/sidebar %>
        <div class="container-fluid">
            <div class="container-fluid">
                <div class="mt-2">
                    <h2>Add Member</h2>
                    <hr>
                </div>
                <div class="container-fluid">
                    <form action="/projects/savemember/<%= projectid %>" method="POST">
                        <fieldset class="form-group">
                            <div class="row">
                                <div class="col-sm-10">
                                    <legend class="col-form-label col-sm-2 pt-0">Name</legend>
                                </div>
                                <% for(let i = 0; i < row.length; i++){%>
                                <div class="col-sm-10 ml-5">
                                    <div class="form-check">
                                        <div class="custom-control custom-radio custom-control-inline">
                                            <input type="radio" name="name" id="<%= `${i}`%>" class="custom-control-input" value="<%= row[i].userid %>">
                                            <label
                                                class="custom-control-label" for="<%= `${i}`%>"><%= row[i].firstname +' '+ row[i].lastname %></label>
                                        </div>
                                    </div>
                                </div>                                
                                <% } %>
                            </div>
                        </fieldset>
                        <fieldset class="form-group">
                            <div class="row">
                                <div class="col-sm-10">
                                    <legend class="col-form-label col-sm-2 pt-0">Position</legend>
                                </div>
                                <div class="col-sm-10 ml-5">
                                    <div class="form-check">
                                        <div class="custom-control custom-radio custom-control-inline">
                                            <input type="radio" name="position" id="manager" value="Manager"
                                                class="custom-control-input">
                                            <label class="custom-control-label" for="manager">Manager</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-10 ml-5">
                                    <div class="form-check">
                                        <div class="custom-control custom-radio custom-control-inline">
                                            <input type="radio" name="position" id="programmer" value="Programmer"
                                                class="custom-control-input">
                                            <label class="custom-control-label" for="programmer">Programmer</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-10 ml-5">
                                    <div class="form-check">
                                        <div class="custom-control custom-radio custom-control-inline">
                                            <input type="radio" name="position" id="qualityassurance" value="QualityAssurance"
                                                class="custom-control-input">
                                            <label class="custom-control-label" for="qualityassurance">Quality
                                                Assurance</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>

</html>